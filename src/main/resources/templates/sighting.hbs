{{#partial "content"}}

    <h1>ADD SIGHTING</h1>
    <form action='/tracking' class="container-fluid">

        <div class="form-group">
            <label for="name">Select Sighting Name</label>
            <select id="name" name="name" class="form-control">
                <option>Zone A</option>
                <option>Zone B</option>
                <option>Zone c</option>
            </select>
        </div>

        <div class="form-group">
            <label for="location">Select Sighting Location</label>
            <select id="location" name="location" class="form-control">
                <option>North</option>
                <option>East</option>
                <option>West</option>
                <option>South</option>
            </select>
        </div>
        <a href="/success" type="submit" class="btn btn-info">Submit</a>
    </form>
{{/partial}}

