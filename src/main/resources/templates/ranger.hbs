{{#partial "content"}}

    <h1>Ranger Details</h1>
    <form action='/tracking' class="container-fluid">
        <div class="form-group">
            <label for="name">Your Name.</label>
            <input id="name" name="name" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="crew">Select crew</label>
            <select id="crew" name="crew" class="form-control">
                <option>Rock</option>
                <option>Nayo</option>
                <option>Simba</option>
                <option>Twiga</option>
            </select>
        </div>
        <a href="/choose" type="submit" class="btn btn-success">Submit</a>
    </form>
{{/partial}}

